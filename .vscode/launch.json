  "version": "0.2.0",
  "configurations": [
    {
      "name": "Streamlit: Debug App",
      "type": "debugpy",
      "request": "launch",
      "program": "-m",
      "args": [
        "streamlit",
        "run",
        "${file}",
        "--server.port",
        "8501"
      ],
      "console": "integratedTerminal",
      "justMyCode": true,
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    }
  ]
}
